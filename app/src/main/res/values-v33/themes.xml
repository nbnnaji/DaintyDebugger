<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#2D13E8</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bug</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="android:windowSplashScreenBackground">#2D13E8</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/bug</item>
        <item name="android:windowSplashScreenBehavior">icon_preferred</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.DaintyDebugger</item>
    </style>


</resources>